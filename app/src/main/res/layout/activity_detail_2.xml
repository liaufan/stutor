<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    tools:context=".Detail_2">

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/gradient_rounded_button"
        android:fontFamily="@font/airbnbcerealextrabold"
        android:text="NEXT"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/airbnbcerealbold"
        android:text="End year"
        android:textColor="#719B98"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textView25"
        app:layout_constraintStart_toStartOf="@+id/endYear"
        app:layout_constraintTop_toTopOf="@+id/textView25" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/airbnbcerealbold"
        android:text="Start year"
        android:textColor="#719B98"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/school"
        app:layout_constraintTop_toBottomOf="@+id/fieldOfStudy" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/airbnbcerealbold"
        android:text="Highest qualification"
        android:textColor="#719B98"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/education_spinner"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/airbnbcerealbold"
        android:text="School / University"
        android:textColor="#719B98"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/school"
        app:layout_constraintTop_toBottomOf="@+id/education_spinner" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/airbnbcerealbold"
        android:text="Field of study"
        android:textColor="#719B98"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/school"
        app:layout_constraintTop_toBottomOf="@+id/school" />

    <EditText
        android:id="@+id/school"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/square_button_stroke"
        android:ems="10"
        android:fontFamily="@font/airbnbcerealbook"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#3E3446"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <EditText
        android:id="@+id/fieldOfStudy"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/square_button_stroke"
        android:ems="10"
        android:fontFamily="@font/airbnbcerealbook"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#3E3446"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24" />

    <EditText
        android:id="@+id/startYear"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/square_button_stroke"
        android:ems="10"
        android:fontFamily="@font/airbnbcerealbook"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#3E3446"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/fieldOfStudy"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <EditText
        android:id="@+id/endYear"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/square_button_stroke"
        android:ems="10"
        android:fontFamily="@font/airbnbcerealbook"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#3E3446"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/fieldOfStudy"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <Spinner
        android:id="@+id/education_spinner"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/square_button_stroke"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/airbnbcerealextrabold"
        android:text="Education Background"
        android:textColor="#3E3446"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/indicator3" />
</androidx.constraintlayout.widget.ConstraintLayout>