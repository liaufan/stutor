<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.subject.SubjectFragment"
    android:background="@drawable/bg7">

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/airbnbcerealextrabold"
        android:text="Add Subject"
        android:textColor="#3E3446"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/airbnbcerealbook"
        android:text="Select a subject and the syllabus to teach"
        android:textColor="#A3A3A3"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView36"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <Spinner
        android:id="@+id/subject_spinner"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="@+id/textView38"
        app:layout_constraintTop_toBottomOf="@+id/textView38" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/airbnbcerealbold"
        android:text="Subject"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView37"
        app:layout_constraintTop_toBottomOf="@+id/textView37" />

    <ScrollView
        android:layout_width="220dp"
        android:layout_height="510dp"

        app:layout_constraintStart_toStartOf="@id/subject_spinner"

        app:layout_constraintTop_toBottomOf="@id/subject_spinner"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/primaryCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Primary School"
                app:layout_constraintStart_toStartOf="@+id/subject_spinner"
                app:layout_constraintTop_toBottomOf="@+id/subject_spinner" />

                <CheckBox
                    android:id="@+id/SKCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="SK"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/primaryCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/primaryCheckBox" />

                <CheckBox
                    android:id="@+id/SJKCCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="SJKC"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/primaryCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/SKCheckBox" />

                <CheckBox
                    android:id="@+id/SJKTCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="SJKT"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/primaryCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/SJKCCheckBox" />

            <CheckBox
                android:id="@+id/secondaryCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Secondary School"
                app:layout_constraintStart_toStartOf="@+id/primaryCheckBox"
                app:layout_constraintTop_toBottomOf="@+id/SJKTCheckBox" />

                <CheckBox
                    android:id="@+id/PT3CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="PT3"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/secondaryCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/secondaryCheckBox" />

                <CheckBox
                    android:id="@+id/SPMCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="SPM"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/secondaryCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/PT3CheckBox" />

                <CheckBox
                    android:id="@+id/JUECChechBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="JUEC"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/secondaryCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/SPMCheckBox" />

                <CheckBox
                    android:id="@+id/SUECCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="SUEC"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/secondaryCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/JUECChechBox" />

                <CheckBox
                    android:id="@+id/OLEVELCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="O-Level"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/secondaryCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/SUECCheckBox" />

            <CheckBox
                android:id="@+id/preUniversityCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pre University"
                app:layout_constraintStart_toStartOf="@+id/secondaryCheckBox"
                app:layout_constraintTop_toBottomOf="@+id/OLEVELCheckBox" />

                <CheckBox
                    android:id="@+id/ALEVELCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="A-Level"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/preUniversityCheckBox"
                    app:layout_constraintTop_toBottomOf="@id/preUniversityCheckBox" />
                <CheckBox
                    android:id="@+id/FoundationCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Foundation"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/preUniversityCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/ALEVELCheckBox" />

            <CheckBox
                android:id="@+id/higherEducationCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Higher Education"
                app:layout_constraintStart_toStartOf="@+id/preUniversityCheckBox"
                app:layout_constraintTop_toBottomOf="@+id/FoundationCheckBox" />

                <CheckBox
                    android:id="@+id/DiplomaCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Diploma"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/higherEducationCheckBox"
                    app:layout_constraintTop_toBottomOf="@id/higherEducationCheckBox" />

                <CheckBox
                    android:id="@+id/DegreeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:text="Degree"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/higherEducationCheckBox"
                    app:layout_constraintTop_toBottomOf="@+id/DiplomaCheckBox" />




        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addButton"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/gradient_rounded_button"
        android:fontFamily="@font/airbnbcerealbold"
        android:text="add"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>